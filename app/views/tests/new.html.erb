<div class="jumbotron" >
<h1 class=> Create </h1>
<%= form_for(@test, url: tests_path ) do |ppl| %>
    <% if @test.errors.any? %>
        <ul>
            <% @test.errors.full_messages.each do |msg|%>
                <li><%= msg.to_s %> </li>
            <%end%>
        </ul>
    <%end%>
            <div class="form-group">
            <label>Title</label>
            <%= ppl.text_field :title %>
            </div>
            
            <div class="form-group">
            <label>Priority</label>
            <%= ppl.text_field :priority%>
            </div>
            <div class="form-group">
            <label>Status</label>
            <%= ppl.text_field :Status%>
            </div>
            

            <%= ppl.submit :Submit%>
    
<% end%>
</div>